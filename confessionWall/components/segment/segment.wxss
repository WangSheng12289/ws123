/* components/segment/segment.wxss */
.segment-group {
    width: 100%;
}

.segment-header {
    width: 100%;
    height: 50rpx;
    /* border: 1px solid black; */
    display: flex;
    text-align: center;
}

.segment-item {
    flex: 1;
    border: 1px solid gray;
}

.active {
    background-color: #fff;
}

.nav {
    display: flex;
    justify-content: space-around;
    padding: 20rpx;
    background-color: rgb(129, 241, 55);
    font-size: 30rpx;
}

.nav-switch-style {
    color: snow;
}

.style-default {
    background-color: rgb(247, 229, 130);
    padding: 100rpx 0;
    text-align: center;
}

.style-roll {
    background-color: rgb(130, 177, 247);
    padding: 100rpx 0;
    text-align: center;
}