.user-content {
    width: 95%;
    margin: 20rpx auto;
    /* border: 1px solid black; */
    box-sizing: border-box;
    display: flex;
    background-color: #fff;
    border-radius: 14rpx;
    position: relative;
    box-shadow: 3rpx 3rpx 3rpx 3rpx gray;
}
.user-headpor image {
    width: 145rpx;
    height: 145rpx;
    border-radius: 50%;
    margin: 15rpx;
    margin-right: 26rpx;
}
.user-text {
    width: 68%;
}
.user-image, .user-video {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-top: 20rpx;
    margin-bottom: 50rpx;
}
.user-image image {
    margin-bottom: 4rpx;
}
.user-video video {
    width: 100%;
}
.user-text .user-name {
    text-align: left;
    margin: 15rpx 0;
}
.user-text .user-input {
    text-align: left;
    font-size: 28rpx;
    font-family: "楷体";
    margin-top: 14rpx;
}
.user-foot {
    font-size: 24rpx;
    display: flex;
    /* border: 1px solid red; */
    position: absolute;
    bottom: 8rpx;
    right: 30rpx;
}
.user-content .comment-group,
.user-foot .praise-group {
    margin: 0 15rpx;
    display: flex;
}
.comment-group navigator {
    display: flex;
}
.user-foot .comment-group image,
.user-foot .praise-group image {
    width: 35rpx;
    height: 35rpx;
    margin: 0 5rpx;
}