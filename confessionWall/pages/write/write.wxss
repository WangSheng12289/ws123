.textarea {
    width: 100%;
    height: 200rpx;
    margin: 0 auto;
    border: 1px solid #f0f0f0;
}
.container {
    width: 95%;
    margin: 0 auto;
}
.write-text-btn {
    margin: 30rpx;
}

.group {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.image-list-group {
    /* width: 100%; */
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
    flex-wrap: wrap;
}
.image-list-group .image-group {
    position: relative;
    overflow: hidden;
} 

.off-btn {
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background-color: red;
    position: absolute;
    right: -15rpx;
    top: -15rpx;
    z-index: 1;
}


.image-add {
    background: #f0f0f0;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    border-radius: 10rpx;
    margin-top: 20rpx;
}
.col {
    position: absolute;
    width: 30rpx;
    height: 80%;
    background-color: #fff;
}
.row {
    width: 80%;
    height: 30rpx;
    background-color: #fff;
}
.temp {
    margin-top: 20rpx;
    background-color: #fff;
}
