/* --------我的关注css------------- */
.video-scroll-view {
    margin-top: 20rpx;
    margin-left: 20rpx;
    width: 100%;
    height: 240rpx;
    white-space: nowrap;
}
.video-scroll-view .item-navigator {
    width: 205rpx;
    height: 215rpx;
    /* border: 1px solid red; */
    display: inline-block;
    margin-right: 20rpx;
    background-color: white;
    overflow: hidden;
    border-radius: 20rpx;
}
.item-navigator .scroll-image image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin-top: 15rpx;
}
.item-navigator .scroll-name {
    font-size: 28rpx;
}

/* ------------------------文字css---------------- */
.user-content {
    width: 95%;
    margin: 20rpx auto;
    /* border: 1px solid black; */
    box-sizing: border-box;
    display: flex;
    background-color: #fff;
    border-radius: 14rpx;
    position: relative;
    box-shadow: 3rpx 3rpx 3rpx 3rpx gray;
}
.user-headpor image {
    width: 145rpx;
    height: 145rpx;
    border-radius: 50%;
    margin: 15rpx;
    margin-right: 26rpx;
}
.user-text {
    width: 68%;
}
.user-image, .user-video {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-top: 20rpx;
    margin-bottom: 50rpx;
}
.user-image image {
    margin-bottom: 4rpx;
}
.user-video video {
    width: 100%;
}
.user-text .user-name {
    text-align: left;
    margin: 15rpx 0;
}
.user-text .user-input {
    text-align: left;
    font-size: 28rpx;
    font-family: "楷体";
    margin-top: 14rpx;
}
.user-foot {
    font-size: 24rpx;
    display: flex;
    /* border: 1px solid red; */
    position: absolute;
    bottom: 8rpx;
    right: 30rpx;
}
.user-content .comment-group,
.user-foot .praise-group {
    margin: 0 15rpx;
    display: flex;
}
.user-foot .comment-group image,
.user-foot .praise-group image {
    width: 35rpx;
    height: 35rpx;
    margin: 0 5rpx;
}

