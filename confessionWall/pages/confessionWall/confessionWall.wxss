    background-color: rgb(244, 244, 244);
}
.bg-group {
    width: 100%;
    height: 400rpx;
    padding: 0px;
    margin: 0px;
    position: absolute;
    display: flex;
    justify-content: center;
    z-index: -1;
}
.bg-group .bg-header {
    background-color: #b6d1cc;
    border-radius: 50%;
    position: absolute;
    bottom: 0; 
}
.swiper image {
    width: 100%;
    height: 100%;
}

.swiper {
    box-sizing: border-box;
    margin: 15rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.title {
    width: 240rpx;
    height: 38rpx;
    line-height: 38rpx;
    /* border: 1px solid red; */
    margin-top: 20rpx;
    display: flex;
}

.title .title-decorate {
    width: 21rpx;
    height: 42rpx;
    background-color: #8BD875;
    margin-left: 18rpx;
}

.title .title-text {
    margin: 0px 18rpx;
    font-size: 36rpx;
}

.release {
    width: 90rpx;
    height: 90rpx;
    text-align: center;
    background-color: rgb(50, 152, 219);
    border-radius: 50%;
    position: fixed;
    bottom: 230rpx;
    right: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.release .reCol,.reRow {
    position: absolute;
    border-radius: 20%;
    background-color: #fff;
}  
.release .reCol {
    width: 14%;
    height: 70%;
}
.release .reRow {
    width: 70%;
    height: 14%;
}
